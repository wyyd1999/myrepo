pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t localhost:8082/repository/dockerhosted-repo/nginx:{env.BUILD_NUMBER} .'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                sh 'docker login localhost:8082 --username admin --password abc123'
                sh 'docker push localhost:8082/repository/dockerhosted-repo/nginx:{env.BUILD_NUMBER}'
            }
        }
    }
}
